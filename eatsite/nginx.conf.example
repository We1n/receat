# Пример конфигурации nginx для размещения eatsite вместе с CRM App
# 
# Разместите этот файл на сервере (обычно /etc/nginx/sites-available/eatsite)
# и создайте симлинк: ln -s /etc/nginx/sites-available/eatsite /etc/nginx/sites-enabled/
# Затем перезапустите nginx: sudo systemctl reload nginx

server {
    listen 80;
    listen [::]:80;
    server_name 155-212-165-45.nip.io;

    # Логирование
    access_log /var/log/nginx/eatsite_access.log;
    error_log /var/log/nginx/eatsite_error.log;

    # Максимальный размер загружаемых файлов
    client_max_body_size 10M;

    # ===== CRM App (существующий) =====
    location /schedule {
        proxy_pass http://localhost:8081/schedule;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # ===== Eatsite Frontend (статический контент) =====
    location /pantry {
        alias /home/webapp/projects/eatsite/frontend/dist;
        try_files $uri $uri/ /pantry/index.html;
        
        # Кеширование статических файлов
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # ===== Eatsite Backend API =====
    location /pantry/api {
        rewrite ^/pantry/api(.*)$ $1 break;
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        
        # Стандартные заголовки
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Таймауты для WebSocket
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # ===== Eatsite Backend API (все остальные endpoints) =====
    location ~ ^/pantry/(workspace|products|recipes|categories|export|health|base-basket) {
        rewrite ^/pantry/(.*)$ /$1 break;
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # ===== Корневой путь (опционально) =====
    location = / {
        return 301 /pantry;
    }
}

# Примечание: WebSocket для eatsite подключается напрямую к backend на порту 3000
# Frontend должен использовать ws://your-domain.com:3000 или настроить переменную VITE_WS_URL
